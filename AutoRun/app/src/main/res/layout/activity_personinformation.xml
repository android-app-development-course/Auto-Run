<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.al.auto_run.activity.PersoninformationActivity">

    <ImageButton
        android:id="@+id/personinformation_reback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circle_bg"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/editPersonInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textSize="17dp"
        android:text="编辑"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FF000000"
        android:textSize="22dp"
        android:text="个人信息" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:id="@+id/headPhoto" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/headPhoto"
        android:layout_marginTop="25dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="18dp"
            android:text="昵称"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/_name"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="18dp"
            android:text="无"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/linearLayout1"
        android:layout_marginTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="18dp"
            android:text="性别"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/_sex"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="18dp"
            android:text="无"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/linearLayout2"
        android:layout_marginTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="18dp"
            android:text="个性签名"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/_sign"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="18dp"
            android:text="无"/>
    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        android:id="@+id/line"
        android:layout_below="@+id/linearLayout3"
        android:background="#FF525151"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"/>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line"
        android:layout_marginTop="15dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="18dp"
            android:text="身高"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/_height"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="18dp"
            android:text="无"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/linearLayout4"
        android:layout_marginTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:textSize="18dp"
            android:text="体重"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/_weight"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="18dp"
            android:text="无"/>
    </LinearLayout>
</RelativeLayout>
